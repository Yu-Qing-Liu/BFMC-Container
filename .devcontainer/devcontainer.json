{
  "name": "Custom Neovim DevPod",
  "image": "ad-dev:latest",
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash",
    "files.exclude": {
      "**/.git": true,
      "**/.vscode": true
    }
  },
  "postCreateCommand": "echo 'DevPod setup complete! Custom Neovim setup.'",
  "remoteUser": "trtuser",
  "mounts": [
    "source=/run/user/1000,target=/run/user/1000,type=bind",
    "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind",
    "source=/home/admin/Repositories/ROS/,target=/home/trtuser/Repositories/ROS,type=bind"
  ],
  "workspaceFolder": "/home/admin/Repositories/ROS",
  "runArgs": [
    "--platform", "linux/amd64",
    "--net", "host",
    "--gpus", "all",
    "--env", "NVIDIA_DRIVER_CAPABILITIES=all",
    "--env", "DISPLAY=unix$DISPLAY",
    "--env", "XDG_RUNTIME_DIR=${XDG_RUNTIME_DIR}",
    "--env", "WAYLAND_DISPLAY=${WAYLAND_DISPLAY}",
    "--env", "QT_X11_NO_MITSHM=1",
    "--device", "/dev/dri:/dev/dri",
    "--workdir", "/home/admin/Repositories/ROS"
  ],
  "containerEnv": {
    "DISPLAY": "unix$DISPLAY",
    "XDG_RUNTIME_DIR": "${XDG_RUNTIME_DIR}",
    "WAYLAND_DISPLAY": "${WAYLAND_DISPLAY}",
    "QT_X11_NO_MITSHM": "1"
  }
}

